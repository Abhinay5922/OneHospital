# One Hospital - Production Environment Variables
# Copy this file to .env and update values for production

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
# Use a production MongoDB Atlas cluster
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/one_hospital?retryWrites=true&w=majority

# Security
# Generate a strong random string (e.g., openssl rand -base64 32)
JWT_SECRET=replace_with_a_long_random_secure_string_in_production
JWT_EXPIRE=7d

# Client Configuration
# The URL where your frontend is hosted
CLIENT_URL=https://your-domain.com

# Socket.IO Configuration
SOCKET_PORT=5000
